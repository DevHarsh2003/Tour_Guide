<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>

  <style>
    body{
     overflow-y: hidden;
     overflow-x: hidden;
    }
    .faded {
    opacity: 0.5;
  }
    #row1{
      position: absolute;
      top: 4rem;
      left:1.4rem;
      width: 79rem;
      padding: 1rem;
    }

    #main{
     overflow-y: scroll;
     overflow-x: hidden;
      background-color: lightgray;
      width:30rem;
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 0.7rem;
    }
    #form-details{
      margin-top: 2rem;
    }
    #name{
    font-size: 2rem;
  }
  #name-div{
    margin-top: 8rem;
    text-align: center;
  }
  .btn{
    background-color: rgb(49, 193, 1);
    color: aliceblue;
    font-size: 0.9rem;
    margin-left:0rem;
    margin-right:1.2rem;
    margin-top: 0.9rem;
    width:12rem;
  } 
  #nav-btn{
    background-color: rgb(49, 193, 1);
    color: aliceblue;
    font-size:0.9rem;
    margin-left:0rem;
    margin-right:0rem;
  }
  #buttons-div{
    text-align: center;
  }
 /* hr{
    height:0.03rem;  
    background-color: lightgray;
    width:70rem;
  }*/


  </style>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"> <img src="../images/IMG-20240102-WA0001.jpg" alt="" height="50rem" width="60rem"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item" >
            <a  class="nav-link btn" id="nav-btn" href="/home">Home</a>
            
          </li>&nbsp;&nbsp;
          <li><a  class="nav-link btn" id="nav-btn" href="/logout">Logout</a></li>
         
        </ul>
      </div>
    </nav>
    <div > 
        <img src="../images/anthony-tran-YIkdjoAJcyI-unsplash.jpg" alt="" height="100%" width="100%">
      </div> 
    
      <div id="row1" class="row">
        <div id="main" class="col col-lg-6" style="height:18rem" >
        <h1>Todolist</h1>
        <table style="width: 36rem;margin-top: 1rem;">
        <% data1.forEach(item => { %>
          <div style="margin-top: 1rem;">
              <tr style="border-bottom: 1px solid rgb(152, 152, 152);">
                <td>
                  <%= item.work %>
                  <div style="float: right;">
                    <%= item.date %>
                    <form action="/delete" method="post" style="display: inline;">
                      <input type="hidden" name="workvalue" value="<%= item.work %>">
                      <button type="submit" class="btn-danger" style="border-radius: 0.5rem; margin-bottom: 0.3rem;margin-top: 0.2rem;">Delete</button>
                    </form>
                    <form action="/done" method="post" style="display: inline;">
                      <input type="hidden" name="workvalue" value="<%= item.work %>">
                      <button type="submit" style="border-radius: 0.5rem;" class="btn-success" <% if (item.var == '1') { %> disabled  style="opacity:0.1;" <% } %> >Done</button>
                    </form>
                  </div>
                </td>
              </tr>
            
          </div>
        <% }); %>
      </table>
    </div>
       
    <div id="fp" class="col col-lg-6" >
      <div class="row" id="main" style="float: right;height:16rem;">
      <table style="width: 36rem;">
        <tr><b>Featured Places</b></tr>
        <% data2.forEach(item => { %>
                <tr style="border-bottom: 1px solid black;"><td><img src="/images/<%=item.pics%>" alt="" width="80px" height="80px"></td><td><div></div><%= item.places %> <div  style="float: right"><%= item.addfp %></div></td>
                </tr>
        <% }); %>
      </table>
      </div>


     <div class="row" id="main" style="float: right;height: 12rem;">
        
        <table style="width: 36rem;">
          <tr><th>Restobar</th></tr>
       <% data3.forEach(item => { %> 
                <tr style="border-bottom: 1px solid black;"><td><%= item.rest %></td> <td  style="float: right"><%= item.addrb %></td> <td><a href="/UserRatings?Place=<%= item.rest%>&City=<%= item.city%>&Name=<%= name%>&Email=<%= email%>">
                  <button type="button"><img src="/images/ur.png" alt="" width="30rem" height="30rem"></button></td></a>
                  <td><a href="/RateIt?Place=<%= encodeURIComponent(item.rest)%>&City=<%= encodeURIComponent(item.city)%>&Name=<%= name%>&Email=<%= email%>"><button type="button"><img src="/images/rt.webp" alt="" width="30rem" height="30rem"></button></a></td>
                </tr>
        <% }); %>
      </table>
    </div>
  </div>

      </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/umd/popper-base.min.js"
            integrity="sha384-rJlklvTlT+DW2l1zrHrFOq49r4giO+zEyQJ1mXkF3Gs62Z/tAe+wNOJ7Vj+R1Cjr"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  </body>
</html>
